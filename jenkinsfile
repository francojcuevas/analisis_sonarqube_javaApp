pipeline {

    agent any
    tools { 
      maven 'Maven' 
    }
    stages {
        stage('Build') {
	steps{
              sh 'mvn clean package'   
	    }
        }                        
        stage('SonarQube analysis') {
	
	//def scannerHome = tool 'sonar_scanner';
            steps {
	        withSonarQubeEnv(credentialsId: 'token-sonar', installationName: 'sonar_scanner'){
		sh 'mvn clean test'
		}
            }
        }

   	}
}

