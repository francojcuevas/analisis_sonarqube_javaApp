pipeline {

    agent any
    tools { 
      maven 'Maven' 
    }
    stages {
        stage('Build') {
	steps{
              sh 'mvn clean package'   
	    }
        }                        
        stage('SonarQube analysis') {
	
	environment {
            scannerHome = tool 'sonarqube_scanner'
        }
	
            steps {
	        withSonarQubeEnv(credentialsId: 'token_sonar', installationName: 'sonarqube_scanner'){
		sh 'mvn clean test'
		}
            }
        }

   	}
}

